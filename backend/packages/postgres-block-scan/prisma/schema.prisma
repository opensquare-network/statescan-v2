generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BLOCK_POSTGRES_URL")
}

model Block {
  height          Int      @id
  hash            String
  time            DateTime
  validator       String?
  extrinsicsCount Int
  eventsCount     Int
}

model Extrinsic {
  height      Int
  index       Int
  isSigned    Boolean
  signer      String?
  section     String
  method      String
  args        Json
  isSuccess   Boolean
  eventsCount Int

  @@id([height, index])
}

model Event {
  height         Int
  index          Int
  extrinsicIndex Int?
  isByExtrinsic  Boolean
  section        String
  method         String
  args           Json

  @@id([height, index])
}

model Status {
  id    Int    @id @default(autoincrement())
  name  String @unique
  value Json
}
